  if (asset_widget_in_frame_form()) {
    drupal_add_js(array('assetWidget' => array('assetFrame' => TRUE)), 'setting');
  }
}

/**
 * Helper to determine in-frame forms context.
 */
function asset_widget_in_frame_form() {
  return !empty($_GET['asset_frame']);
}

